<Window x:Class="BarcodeScanner.QuantityInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод количества" Height="150" Width="300">
    <StackPanel Margin="10,10,10,14">
        <TextBlock Text="Введите количество:" Margin="0,0,0,5"/>
        <TextBox x:Name="QuantityInputTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OkButton_Click" Margin="0,0,5,0" Width="75"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="75"/>
        </StackPanel>
    </StackPanel>
</Window>
